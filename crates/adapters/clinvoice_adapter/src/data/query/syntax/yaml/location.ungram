/// A query for a `Location`.
YamlLocationQuery =
  Tab* 'id:literal_newline'
  YamlUuidQuery 'literal_newline'
  Tab* 'outer:literal_newline'
  YamlLocationQueryOuter 'literal_newline'
  Tab* 'name:literal_newline'
  YamlStringQuery

/// A query for the `outer` `Location` of some `Location`.
YamlLocationQueryOuter =
  MatchAny
| MatchCondition 'None'
| MatchCondition 'Some' 'literal_newline'
  YamlLocationQuery
